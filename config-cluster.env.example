###############################################################################
# Proxmox Gameserver Cluster - Configuration Template
# Pas deze waarden aan voor je setup
###############################################################################

# ═══════════════════════════════════════════════════════════════════════════
# CLUSTER CONFIGURATIE
# ═══════════════════════════════════════════════════════════════════════════

CLUSTER_NAME="gameserver-cluster"
CLUSTER_DOMAIN="gameserver.local"
TIMEZONE="Europe/Amsterdam"
ADMIN_EMAIL="admin@gameserver.local"

# ═══════════════════════════════════════════════════════════════════════════
# NETWERK ADDRESSING
# ═══════════════════════════════════════════════════════════════════════════

# Management Network (VLAN 10) - Proxmox + Corosync
MGMT_NETWORK="192.168.10.0/24"
MGMT_GATEWAY="192.168.10.1"
MGMT_VLAN="10"

# Game Server Network (VLAN 20) - Public facing
GAME_NETWORK="192.168.20.0/24"
GAME_GATEWAY="192.168.20.1"
GAME_VLAN="20"

# Ceph Storage Network (VLAN 30)
CEPH_NETWORK="192.168.30.0/24"
CEPH_VLAN="30"

# DNS
DNS1="1.1.1.1"
DNS2="8.8.8.8"

# ═══════════════════════════════════════════════════════════════════════════
# NODE ADRESSEN
# ═══════════════════════════════════════════════════════════════════════════

NODE1_MGMT_IP="192.168.10.11"
NODE2_MGMT_IP="192.168.10.12"
NODE3_MGMT_IP="192.168.10.13"
NODE4_MGMT_IP="192.168.10.14"
NODE5_MGMT_IP="192.168.10.15"

# ═══════════════════════════════════════════════════════════════════════════
# STORAGE CONFIGURATIE
# ═══════════════════════════════════════════════════════════════════════════

# VM Storage (Ceph pool)
VM_STORAGE="ceph-vms"

# Backup storage
BACKUP_STORAGE="ceph-backups"
BACKUP_DIR="/mnt/backups"
BACKUP_RETENTION_DAYS="7"

# ═══════════════════════════════════════════════════════════════════════════
# VM TEMPLATES
# ═══════════════════════════════════════════════════════════════════════════

TEMPLATE_VMID="9000"
TEMPLATE_NAME="ubuntu-22.04-template"

# ═══════════════════════════════════════════════════════════════════════════
# VM ADRESSEN & RESOURCES
# ═══════════════════════════════════════════════════════════════════════════

# Panel VM
PANEL_VMID="100"
PANEL_IP="192.168.20.10"
PANEL_CORES="4"
PANEL_RAM="8192"      # MB
PANEL_DISK="80"       # GB

# Game Node VMs
NODE1_VMID="201"
NODE1_IP="192.168.20.21"
NODE1_CORES="8"
NODE1_RAM="16384"
NODE1_DISK="150"

NODE2_VMID="202"
NODE2_IP="192.168.20.22"
NODE2_CORES="8"
NODE2_RAM="16384"
NODE2_DISK="150"

NODE3_VMID="203"
NODE3_IP="192.168.20.23"
NODE3_CORES="8"
NODE3_RAM="16384"
NODE3_DISK="150"

# Monitoring VM
MON_VMID="300"
MON_IP="192.168.20.90"
MON_CORES="4"
MON_RAM="8192"
MON_DISK="100"

# ═══════════════════════════════════════════════════════════════════════════
# CEPH CONFIGURATIE
# ═══════════════════════════════════════════════════════════════════════════

CEPH_CLUSTER_NETWORK="192.168.30.0/24"
CEPH_PUBLIC_NETWORK="192.168.10.0/24"

# OSD replication factor
CEPH_POOL_SIZE="2"        # 2 replicas (N+1)
CEPH_POOL_MIN_SIZE="1"    # Min replicas before read-only

# ═══════════════════════════════════════════════════════════════════════════
# HIGH AVAILABILITY
# ═══════════════════════════════════════════════════════════════════════════

# HA vereist minimaal 3 nodes voor quorum
HA_ENABLED="true"

# HA groups configuratie
# critical: Panel, Monitoring (highest priority)
# production: Game servers (high priority)
# standard: Extra VMs (normal priority)

# ═══════════════════════════════════════════════════════════════════════════
# MONITORING
# ═══════════════════════════════════════════════════════════════════════════

# Prometheus retention
PROMETHEUS_RETENTION="30d"

# Grafana
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASSWORD="admin"    # ⚠️  Wijzig dit!

# ═══════════════════════════════════════════════════════════════════════════
# SECURITY & HARDENING
# ═══════════════════════════════════════════════════════════════════════════

# SSH configuration
SSH_ALLOW_ROOT="prohibit-password"

# Firewall
FIREWALL_ENABLED="true"

# ═══════════════════════════════════════════════════════════════════════════
# AUTO-SETTINGS
# ═══════════════════════════════════════════════════════════════════════════

# Auto-start VMs on Proxmox boot
AUTO_START_VMS="true"

# Auto-snapshots
AUTO_SNAPSHOT_ENABLED="true"
AUTO_SNAPSHOT_RETENTION="7"

# ═══════════════════════════════════════════════════════════════════════════
# NOTIFICATIES
# ═══════════════════════════════════════════════════════════════════════════

# Discord webhook voor alerts (optioneel)
DISCORD_WEBHOOK=""

# Email alerts
EMAIL_ALERTS="true"
ALERT_EMAIL="admin@gameserver.local"
